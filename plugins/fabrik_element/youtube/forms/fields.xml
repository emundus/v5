<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields name="params">
		<fieldset addfieldpath="/administrator/components/com_fabrik/models/fields" name="plg-element-youtube">
		
			<field type="helplink"
				url="PLG_ELEMENT_YOUTUBE_HELP_SERVER" />
				
			<field default="60" description="" label="Width" name="width" size="3" type="text"/>
			<field default="" label="Default" name="default" size="50" type="text"/>
			<field default="1" description="" label="INCLUDERELATEDVIDEOS" name="include_related" type="radio">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</field>
			<field default="0" description="" label="SHOWBORDER" name="show_border" type="radio">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</field>
			<field default="0" description="ENABLEDELAYEDCOOKIESDESC" label="ENABLEDELAYEDCOOKIES" name="enable_delayed_cookies" type="radio">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</field>
			<field default="#333333" description="COLOR1DESC" label="COLOR1" name="color1" size="9" type="text"/>
			<field default="#000000" description="COLOR2DESC" label="COLOR2" name="color2" size="9" type="text"/>
			<field default="medium" description="" label="PLAYERSIZE" name="player_size" type="radio">
				<option value="small">340x285</option>
				<option value="medium">445x364</option>
				<option value="normal">500x405</option>
				<option value="big">660x525</option>
			</field>
			<field description="ORWIDTHPLAYERDESC" label="ORWIDTHPLAYER" name="or_width_player" size="3" type="text"/>
			<field description="ORHEIGHTPLAYERDESC" label="ORHEIGHTPLAYER" name="or_height_player" size="3" type="text"/>
			<field default="0" description="DISPLAYINTABLEDESC" label="DISPLAYINTABLE" name="display_in_table" type="radio">
				<option value="0">Mini</option>
				<option value="1">Display link</option>
				<option value="2">Normal</option>
			</field>
			<field default="0" description="DISPLAYLINKDESC" label="DISPLAYLINK" name="display_link" type="radio">
				<option value="0">Raw txt link</option>
				<option value="1">Linked txt link</option>
				<option value="2">'Watch Video' link</option>
			</field>
			<field default="Watch Video" description="" label="TEXTLINK" name="text_link" size="12" type="text"/>
			<field default="0" description="TARGETLINKDESC" label="TARGETLINK" name="target_link" type="radio">
				<option value="0">Current window</option>
				<option value="1">New window</option>
				<option value="2">Lightbox</option>
			</field>
		</fieldset>
	</fields>		
</form>
