<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields>
		<fieldset name="plg-element-time">
			<field default="0" description="PLG_ELEMENT_TIME_EVAL_DESC" label="PLG_ELEMENT_TIME_EVAL_LABEL" name="eval" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
			<field cols="45" label="PLG_ELEMENT_TIME_DEFAULT_LABEL" description="PLG_ELEMENT_TIME_DEFAULT_DESC" name="default" rows="6" type="textarea"/>
		</fieldset>
	</fields>
	<fields name="params">
		<fieldset addfieldpath="/administrator/components/com_fabrik/models/fields" name="plg-element-time-params">
		
			<field default="" description="PLG_ELEMENT_TIME_HOUR_LABEL_DESC" label="PLG_ELEMENT_TIME_HOUR_LABEL" name="time_hourlabel" type="text"/>
				
			<field default="" description="PLG_ELEMENT_TIME_MIN_LABEL_DESC" label="PLG_ELEMENT_TIME_MIN_LABEL" name="time_minlabel" type="text"/>
				
			<field default="" description="PLG_ELEMENT_TIME_SEC_LABEL_DESC" label="PLG_ELEMENT_TIME_SEC_LABEL" name="time_seclabel" type="text"/>
				
		<field default="H:i:s" description="PLG_ELEMENT_TIME_LIST_FORMAT_DESC" label="PLG_ELEMENT_TIME_LIST_FORMAT" name="list_time_format" type="radio">
			<option value="H:i:s">12:34:56</option>
			<option value="H:i">12:34</option>
			<option value="i:s">34:56</option>
		</field>

		<field default="H:i:s" description="PLG_ELEMENT_TIME_DETAILS_FORMAT_DESC" label="PLG_ELEMENT_TIME_DETAILS_FORMAT" name="details_time_format" type="radio">
			<option value="H:i:s">12:34:56</option>
			<option value="H:i">12:34</option>
			<option value="i:s">34:56</option>
		</field>
		<field default=":" description="PLG_ELEMENT_TIME_SEPARATOR_LABEL_DESC" label="PLG_ELEMENT_TIME_SEPARATOR_LABEL" name="time_separatorlabel" type="text"/>

		</fieldset>
	</fields>
</form>
