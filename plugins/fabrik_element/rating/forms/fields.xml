<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields addfieldpath="/administrator/components/com_fabrik/models/fields" name="params">
		<fieldset label="field" name="plg-element-rating">
		
			<field type="helplink"
				url="PLG_ELEMENT_RATING_HELP_SERVER" />
				
			<field default="user-rating" description="PLG_ELEMENT_RATING_MODE_DESC" label="PLG_ELEMENT_RATING_MODE_LABEL" name="rating-mode" type="radio">
					<option value="user-rating">User rating</option>
					<option value="creator-rating">Creator rating</option>
			</field>
			
			<field default="1" description="PLG_ELEMENT_RATING_NO_RATING_OPTION_FIRST_DESC" label="PLG_ELEMENT_RATING_NO_RATING_OPTION_FIRST_LABEL" name="rating-nonefirst" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field default=".png" description="PLG_ELEMENT_RATING_IMAGE_FILE_TYPE_DESC" label="PLG_ELEMENT_RATING_IMAGE_FILE_TYPE_LABEL" name="rating-pngorgif" type="radio">
					<option value=".gif">GIF</option>
					<option value=".png">PNG</option>
			</field>
			
			<field default="1" description="PLG_ELEMENT_RATING_RATE_IN_FORM_DESC" label="PLG_ELEMENT_RATING_RATE_IN_FORM_LABEL" name="rating-rate-in-form" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field default="0" description="PLG_ELEMENT_RATING_FLOAT_DESCRIPTION" label="PLG_ELEMENT_RATING_FLOAT_LABEL" name="rating_float" size="2" type="text"/>

		</fieldset>
	</fields>
</form>
