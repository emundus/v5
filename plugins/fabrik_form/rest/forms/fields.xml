<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields addfieldpath="/administrator/components/com_fabrik/models/fields" name="params">
		<fieldset name="plg-form-rest">
			
			<field name="username"
				type="field"
				default=""
				repeat="true"
				description="PLG_FORM_REST_USERNAME_DESC" 
				label="PLG_FORM_REST_USERNAME_LABEL" />
			
			<field name="password"
				type="text"
				repeat="true"
				description="PLG_FORM_REST_PASSWORD_DESC"
				label="PLG_FORM_REST_PASSWORD_LABEL" />
			
			<field name="get"
				type="text"
				repeat="true"
				size="60"
				description="PLG_FORM_REST_GET_ENDPOINT_DESC"
				label="PLG_FORM_REST_GET_ENDPOINT_LABEL" />
				
			<field name="endpoint"
				type="text"
				repeat="true"
				size="60"
				description="PLG_FORM_REST_ENDPOINT_DESC"
				label="PLG_FORM_REST_ENDPOINT_LABEL"/>	
			
			<field name="put"
				type="text"
				repeat="true"
				size="60"
				description="PLG_REST_PUT_ENDPOINT_DESC"
				label="PLG_REST_PUT_ENDPOINT_LABEL"/>	
					
			<field name="xml_parent"
				type="field"
				repeat="true"
				description="PLG_FORM_REST_XML_PARENT_DESC"
				label="PLG_FORM_REST_XML_PARENT_LABEL" />
				
			<field name="put_include_list"	
				type="fabrikmodalrepeat"
				repeat="true"
				description="PLG_FORM_REST_PUT_INCLUDE_LIST_DESC"
				label="PLG_FORM_REST_PUT_INCLUDE_LIST_LABEL">
				
					<fields name="params">
						<fieldset modal="true" name="put_include_list_modal" repeat="true">
						
							<field name="put_key"
								type="text"
								label="PLG_FORM_REST_KEY_LABEL" />
								
							<field name="put_value"
								type="listfields"
								 valueformat="tableelement"
								label="PLG_FORM_REST_VALUE_LABEL"/>
								
							<field name="put_default"
								type="text"
								label="PLG_FORM_REST_DEFAULT_LABEL" />
						
							<field name="put_type"
								type="list"
								label="PLG_FORM_REST_FIELD_TYPE">
									<option value="number">number</option>
									<option value="string">string</option>
							</field>
								
						</fieldset>
					</fields>
				</field>
				
			<field name="foreign_key"
				type="listfields"
				repeat="true"
				description="PLG_FORM_REST_FOREIGN_KEY_DESC"
				label="PLG_FORM_REST_FOREIGN_KEY_LABEL" />
			
			<field name="foreign_key_eval"
				type="textarea"
				repeat="true"
				description="PLG_FORM_REST_FOREIGN_KEY_EVAL_DESC"
				label="PLG_FORM_REST_FOREIGN_KEY_EVAL_LABEL" />
		
		</fieldset>
		
		<fieldset name="oAuth" label="oAuth">
		
			<field name="oauth_consumer_key"
				type="text"
				repeat="true"
				label="PLG_FORM_REST_OAUTH_CONSUMER_KEY_LABEL"
				description="PLG_FORM_REST_OAUTH_CONSUMER_KEY_DESC" />
			
			<field name="oauth_consumer_secret"
				type="text"
				repeat="true"
				label="PLG_FORM_REST_OAUTH_CONSUMER_SECRET_LABEL"
				description="PLG_FORM_REST_OAUTH_CONSUMER_SECRET_DESC" />
			
			
			<field name="server_uri"
				type="text"
				repeat="true"
				label="PLG_FORM_REST_OAUTH_SERVER_URI_LABEL"
				description="PLG_FORM_REST_OAUTH_SERVER_URI_DESC" />
				
			<field name="request_token_uri"
				type="text"
				repeat="true"
				label="PLG_FORM_REST_OAUTH_REQUEST_TOKEN_URI_LABEL"
				description="PLG_FORM_REST_OAUTH_REQUEST_TOKEN_URI_DESC" />
				
			<field name="authorize_uri"
				type="text"
				repeat="true"
				label="PLG_FORM_REST_OAUTH_AUTHORIZE_URI_LABEL"
				description="PLG_FORM_REST_OAUTH__AUTHORIZE_URI_DESC" />
				
			<field name="access_token_uri"
				type="text"
				repeat="true"
				label="PLG_FORM_REST_OAUTH_ACCESS_TOKEN_URI_LABEL"
				description="PLG_FORM_REST_OAUTH_ACCESS_TOKEN_URI_DESC" />
				
		</fieldset>
		
	</fields>
</form>
